
@{
    ViewData["Title"] = "Painel do Monitor de Rede";
}

<div class="container">
    <h1>Painel do Monitor de Rede</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">Status da rede</div>
                <div class="card-body">
                    <div id="networkStatusGrid" class="grid-container"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Uso de largura de banda</div>
                <div class="card-body">
                    <canvas id="bandwidthChart" height="200"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Tempo de resposta</div>
                <div class="card-body">
                    <canvas id="responseTimeChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
    <script src="~/js/networkMonitor.js"></script>
}